{
  "info": {
    "name": "PrepVista RAG System",
    "description": "Complete collection for testing PrepVista RAG functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. System Status",
      "item": [
        {
          "name": "Debug - Check System Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/debug",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["debug"]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "2. PDF Upload & Processing",
      "item": [
        {
          "name": "Upload PDF for RAG",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "multipart/form-data",
                "disabled": true
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/your/sample.pdf"
                },
                {
                  "key": "agent_id",
                  "value": "test-agent-123",
                  "type": "text"
                },
                {
                  "key": "document_id",
                  "value": "sample-doc-001",
                  "type": "text",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8000/api/rag/upload-pdf",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "rag", "upload-pdf"]
            }
          }
        }
      ]
    },
    {
      "name": "3. RAG Queries",
      "item": [
        {
          "name": "Query with RAG Context",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"What are the main topics covered in this document?\",\n  \"agent_id\": \"test-agent-123\",\n  \"document_id\": \"sample-doc-001\",\n  \"max_context_chunks\": 5,\n  \"include_sources\": true\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/rag/query",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "rag", "query"]
            }
          }
        },
        {
          "name": "Query without Document ID (Search All)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"Explain the key concepts discussed\",\n  \"agent_id\": \"test-agent-123\",\n  \"max_context_chunks\": 3,\n  \"include_sources\": true\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/rag/query",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "rag", "query"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Document Search",
      "item": [
        {
          "name": "Search Documents",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"machine learning algorithms\",\n  \"agent_id\": \"test-agent-123\",\n  \"max_results\": 10\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/rag/search",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "rag", "search"]
            }
          }
        },
        {
          "name": "Search in Specific Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"neural networks\",\n  \"agent_id\": \"test-agent-123\",\n  \"document_id\": \"sample-doc-001\",\n  \"max_results\": 5\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/rag/search",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "rag", "search"]
            }
          }
        }
      ]
    },
    {
      "name": "5. RAG-Enhanced Question Generation",
      "item": [
        {
          "name": "Generate RAG Questions",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agent_id\": \"test-agent-123\",\n  \"subject\": \"Machine Learning\",\n  \"question_types\": [\"MCQ\", \"SHORT_ANSWER\"],\n  \"question_count\": 3,\n  \"difficulty\": \"medium\",\n  \"document_content\": \"Sample content about machine learning\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/ai-agents/questions/rag",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "ai-agents", "questions", "rag"]
            }
          }
        },
        {
          "name": "Generate Regular Questions (Fallback)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agent_id\": \"test-agent-123\",\n  \"subject\": \"Mathematics\",\n  \"question_types\": [\"MCQ\"],\n  \"question_count\": 2,\n  \"difficulty\": \"easy\",\n  \"document_content\": \"Basic math concepts\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/ai-agents/questions",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "ai-agents", "questions"]
            }
          }
        }
      ]
    },
    {
      "name": "6. Statistics & Monitoring",
      "item": [
        {
          "name": "Get RAG Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/rag/stats/test-agent-123",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "rag", "stats", "test-agent-123"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "agent_id",
      "value": "test-agent-123",
      "type": "string"
    }
  ]
}
